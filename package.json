{
  "name": "api",
  "version": "0.0.1",
  "description": "NestJS API with Bun runtime",
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "bunx prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "bunx nest start",
    "start:dev": "bunx nest start --watch",
    "start:debug": "bunx nest start --debug --watch",
    "start:prod": "bun run dist/src/main.js",
    "lint": "bunx eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bunx jest",
    "test:watch": "bunx jest --watch",
    "test:cov": "bunx jest --coverage",
    "test:debug": "bunx ts-node --loader tsconfig-paths/register --inspect-brk node_modules/.bin/jest --runInBand",
    "test:e2e": "bunx jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.787.0",
    "@aws-sdk/s3-request-presigner": "^3.787.0",
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^11.1.0",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/platform-socket.io": "^11.1.1",
    "@nestjs/swagger": "^11.1.5",
    "@nestjs/websockets": "^11.0.11",
    "@prisma/client": "^6.6.0",
    "@types/multer": "^1.4.12",
    "arktype": "^2.1.20",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.8.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "ioredis": "^5.6.1",
    "logform": "^2.7.0",
    "multer": "^1.4.5-lts.2",
    "nestjs-telegraf": "^2.8.1",
    "node-cron": "^3.0.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "telegraf": "^4.16.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.4",
    "@nestjs/config": "^4.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.17",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bun": "latest",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@types/winston": "^2.4.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.6.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
